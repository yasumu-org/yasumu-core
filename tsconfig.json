{
  "compilerOptions": {
    "target": "ES2021",
    "alwaysStrict": true,
    "strict": true,
    "strictNullChecks": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "outDir": "./dist",
    "module": "NodeNext",
    "lib": ["ES2021", "DOM"],
    "inlineSourceMap": true,
    "pretty": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
